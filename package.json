{
  "name": "sunny",
  "private": true,
  "scripts": {
    "build": "pnpm --recursive run build",
    "dev": "pnpm --recursive --parallel run dev",
    "format": "prettier --write \"**/*.{ts,tsx,md,json,js,jsx}\"",
    "lint": "eslint .",
    "lint:fix": "eslint . --fix",
    "typecheck": "pnpm --recursive run typecheck",
    "fin": "pnpm format && pnpm lint:fix && pnpm typecheck",
    "db:push": "pnpm --filter @repo/api run db:push"
  },
  "packageManager": "pnpm@10.26.0",
  "devDependencies": {
    "@eslint/js": "^9.39.2",
    "@tanstack/eslint-config": "^0.3.4",
    "@tanstack/eslint-plugin-router": "^1.141.0",
    "eslint": "^9.39.2",
    "eslint-config-prettier": "^10.1.8",
    "eslint-plugin-simple-import-sort": "^12.1.1",
    "eslint-plugin-unicorn": "^62.0.0",
    "globals": "^16.5.0",
    "prettier": "^3.7.4",
    "prettier-plugin-tailwindcss": "^0.7.2",
    "typescript": "^5.9.3",
    "typescript-eslint": "^8.50.0"
  }
}
